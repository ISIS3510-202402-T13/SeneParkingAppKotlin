<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="16dp">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/main"
        android:src="@drawable/temporary_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        />
    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:layout_below="@id/main"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <!-- Mobile Number or University ID Input -->
    <EditText
        android:id="@+id/inputMobileOrId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/mobile_number_sign_in_hint"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@id/appName"
        android:layout_marginTop="40dp"
        android:inputType="number"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:background="@drawable/rounded_edittext"
        android:layout_below="@id/inputMobileOrId"
        android:layout_marginTop="20dp"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        android:inputType="textPassword" />

    <!-- Log In Button -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textColor="@color/base"
        android:background="@drawable/button_outline_filled"
        android:layout_below="@id/inputPassword"
        android:layout_marginTop="24dp" />

    <!-- Forgotten Password Text -->
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotten_password"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_below="@id/btnLogin"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <!-- Create New Account Button -->
    <Button
        android:id="@+id/btnCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_new_account"
        android:textColor="@color/white"
        android:background="@drawable/button_outline"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp" />

</RelativeLayout>